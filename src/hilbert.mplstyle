axes.titlesize: 14
axes.labelsize: 10
xtick.labelsize: 9
ytick.labelsize: 9
font.size: 9
legend.fontsize: 9

# Use Computer Modern for text and mathtext
font.family: serif
font.serif: cmr10, serif
mathtext.fontset: cm

# For minus sign to appear properly; see e.g.
# https://stackoverflow.com/a/32020370
# https://github.com/matplotlib/matplotlib/issues/17007#issuecomment-685951519
axes.unicode_minus: False
axes.formatter.use_mathtext: True

font.monospace: Computer Modern Typewriter, monospace
